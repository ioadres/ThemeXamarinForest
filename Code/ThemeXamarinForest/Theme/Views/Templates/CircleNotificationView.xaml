<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this"
    x:Class="Theme.Views.Templates.CircleNotificationView" xmlns:control="clr-namespace:Theme.Controls">

    <AbsoluteLayout>
             <control:CircleControl 
                Active="true" 
                WidthRequest="30" 
                HeightRequest="30"  
                CornerRadius="14"
                BackgroundColor="{Binding Background, Source={x:Reference this}}">
            </control:CircleControl>
                <Label Text="{Binding Text, Source={x:Reference this}}" 
                TextColor="{Binding TextColor, Source={x:Reference this}}"
                TranslationX="12" TranslationY="3" FontFamily="Droid Sans Mono"></Label>
    </AbsoluteLayout>
</ContentView>
